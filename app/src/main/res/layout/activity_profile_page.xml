<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfilePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/angel"
            android:src="@drawable/angel"
            android:onClick="showBottomSheet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:verticalScrollbarPosition="left"
            app:civ_border_color="@color/purple"
            app:civ_border_width="3dp"
            android:contentDescription="angel profile"/>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/andika"
            android:src="@drawable/andika2"
            android:onClick="bottomSheet"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:verticalScrollbarPosition="left"
            app:civ_border_color="@color/purple"
            app:civ_border_width="3dp"
            android:contentDescription="andika profile"/>

    </LinearLayout>

</LinearLayout>